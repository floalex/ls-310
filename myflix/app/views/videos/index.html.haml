%article.video_category
  %header
    %h3= link_to "Myflix Videos"
    %br
    %br
    - @categories.each do |category|
      %header
        %h3= category.name
      .videos.row
        - category.videos.each do |video|
          .video.col-sm-2
            = link_to video_path(video) do
              %image(src="#{video.small_cover_url}")
              %br
              %br
        